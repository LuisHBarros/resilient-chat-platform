# Copy this file to terraform.tfvars and customize for your environment

aws_region = "us-east-1"
project_name = "ia-proj"
environment = "dev"

# Application configuration
app_port = 8000
container_cpu = 512      # 0.5 vCPU
container_memory = 1024  # 1 GB

# ECS scaling
desired_count = 2
min_capacity = 1
max_capacity = 10
enable_autoscaling = true

# Bedrock configuration
bedrock_model_id = "anthropic.claude-3-sonnet-20240229-v1:0"

# CORS configuration
allowed_cors_origins = [
  "*"  # In production, specify exact origins like: "https://yourdomain.com"
]

# DynamoDB configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"
dynamodb_read_capacity = 5   # Only used if billing_mode = "PROVISIONED"
dynamodb_write_capacity = 5   # Only used if billing_mode = "PROVISIONED"

# Logging
log_retention_days = 7

# Tags
tags = {
  Project     = "ia-proj"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Team        = "platform"
}

